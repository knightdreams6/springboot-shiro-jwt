<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.learn.project.project.mapper.PermMapper">

    <!--  根据角色id获取其权限  -->
    <select id="getPermissionsSet" resultType="string">
        SELECT
            m.perms_key
        FROM
            sys_perm m
                INNER JOIN sys_role_perm rm ON m.perm_id = rm.perm_id
        WHERE
            rm.role_id = #{roleId}
    </select>
</mapper>
